# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration (for local development with Docker database)
PGHOST=localhost
PGPORT=5433
PGUSER=pat_user
PGPASSWORD=pat_password
PGDATABASE=pat_db

# Node Environment
NODE_ENV=development

# Data Seeding Configuration
DATA_PATH=/app/data
CHUNK_SIZE=2500
OVERLAP_SENTENCES=2
DOWNLOAD_DATA=true
PAT_DATA_REPO=https://github.com/Vassar-Cognitive-Science/pat-data.git

# Docker-only settings (used by docker-compose)
POSTGRES_PASSWORD=pat_secure_password_for_production