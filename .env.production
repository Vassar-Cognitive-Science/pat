# Production Environment Configuration for Pat Chatbot
# Copy this file to .env and fill in your actual values

# REQUIRED: OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# REQUIRED: Database Configuration  
POSTGRES_USER=pat_user
POSTGRES_PASSWORD=your_secure_production_password_here
POSTGRES_DB=pat_db

# Optional: Data Seeding Configuration
DOWNLOAD_DATA=true
PAT_DATA_REPO=https://github.com/Vassar-Cognitive-Science/pat-data.git
CHUNK_SIZE=2500
OVERLAP_SENTENCES=2

# System Configuration (usually don't need to change)
NODE_ENV=production